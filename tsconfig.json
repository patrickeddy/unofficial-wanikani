{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext", // Changed from UMD
    "strict": true,
    "moduleResolution": "node", // Or "bundler" if preferred
    "isolatedModules": true, // Recommended for Vite/esbuild
    "esModuleInterop": true, // Often helpful
    "skipLibCheck": true, // Can speed up checks
    "noEmit": true // Vite handles emission, tsc only for types if needed separately
  },
  "include": ["src/**/*", "vite.config.ts"] // Include Vite config
}
